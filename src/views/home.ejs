<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/c.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Add a black background color to the top navigation */
        .topnav {
            background-color: #333;
            overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/createUser">Create Users</a>

    </div>
    <div class="flex items-center justify-center">

        <h1 class="flex text-[30px] font-semibold   mt-6 "> List Users</h1>
    </div>


    <div class="w-[1000px] flex justify-center items-center mt-20 mx-auto">

        <div class=" w-[800px]  relative overflow-x-auto ">
            <table class="w-full text-base text-left text-gray-500 dark:text-gray-400">
                <thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-8 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-8 py-3">
                            Email
                        </th>
                        <th scope="col" class="px-8 py-3">
                            Name
                        </th>
                        <th scope="col" class="px-8 py-3">
                            City
                        </th>
                        <th scope="col" class="px-8 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% listUsers.forEach(function(user, index) { %>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row"
                                class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                <%= user.id %>
                            </th>
                            <td class="px-8 py-6">
                                <%= user.email %>
                            </td>
                            <td class="px-8 py-6">
                                <%= user.name %>
                            </td>
                            <td class="px-8 py-6">
                                <%= user.city %>
                            </td>
                            <td class="px-6 py-4 flex  gap-[20px] mt-2">
                                <a href="/update"
                                    class="font-medium text-blue-600 dark:text-blue-500 hover:underline ">Edit</a>
                                <a href="#"
                                    class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>

                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>


    </div>

</body>

</html>